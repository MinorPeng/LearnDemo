<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_report2_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_date_dialog" />

    <Button
        android:id="@+id/btn_report2_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_time_dialog" />

    <TextView
        android:id="@+id/tv_report2_date_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_report2_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
